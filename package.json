{
  "name": "create-easy-ui5",
  "version": "1.0.1",
  "description": "npm-init wrapper for Easy-UI5",
  "bin": {
    "easy-ui5": "index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ui5-community/create-easy-ui5.git"
  },
  "keywords": [],
  "author": "Peter Muessig",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/ui5-community/create-easy-ui5/issues"
  },
  "homepage": "https://github.com/ui5-community/create-easy-ui5#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "format": "prettier --write .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prepare": "node ./.husky/skip.js || husky",
    "hooks:pre-commit": "lint-staged",
    "hooks:commit-msg": "commitlint -e",
    "preversion": "npm run changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "generator-easy-ui5": "^3.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": [
      "prettier --write ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
